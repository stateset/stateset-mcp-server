# Test Environment Configuration

NODE_ENV=test
LOG_LEVEL=error

# Test API Configuration
STATESET_API_KEY=test-api-key-for-testing
STATESET_BASE_URL=https://api.stateset.io/v1
STATESET_API_VERSION=v1

# Test Rate Limiting (more permissive for tests)
REQUESTS_PER_HOUR=10000
REQUESTS_PER_MINUTE=500
BURST_SIZE=100
RETRY_ATTEMPTS=2
RETRY_DELAY=500

# Test Caching
CACHE_ENABLED=true
CACHE_TTL=60
CACHE_MAX_SIZE=100
CACHE_STRATEGY=lru

# Test Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_RESET_TIMEOUT=2000

# Test Feature Flags
FEATURE_CACHING=true
FEATURE_METRICS=true
FEATURE_HEALTH_CHECK=true
FEATURE_WEBSOCKET=false
FEATURE_CIRCUIT_BREAKER=true
FEATURE_COMPRESSION=false
FEATURE_OPEN_API_CONVERTER=false
FEATURE_ENABLE_TELEMETRY=false

# Test Server Configuration
API_TIMEOUT_MS=5000
WEBSOCKET_PORT=8082
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=15000
