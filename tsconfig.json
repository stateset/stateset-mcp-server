{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@tools/*": ["tools/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    // Optional HTTP/Express features (stdio transport doesn't need these)
    "src/middleware/security.ts",
    "src/middleware/api-docs.ts",
    // Experimental/Advanced features (disabled by default)
    "src/core/realtime-manager.ts",
    "src/core/intelligent-cache.ts",
    "src/core/openapi-converter.ts",
    "src/core/performance-optimizer.ts",
    "src/core/advanced-metrics.ts",
    "src/services/enhanced-stateset-client.ts",
    "src/tools/ai-insights.ts",
    "src/tools/openapi-tools.ts",
    "src/tools/enhanced-tools.ts",
    "src/utils/shutdown.ts",
    "src/auth/**"
  ]
}
