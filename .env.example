# ==========================================
# StateSet MCP Server Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# API Configuration (Required)
# ------------------------------------------
STATESET_API_KEY=your_api_key_here
STATESET_BASE_URL=https://api.stateset.io/v1
STATESET_API_VERSION=v1
API_TIMEOUT_MS=10000

# ------------------------------------------
# Rate Limiting
# ------------------------------------------
# Maximum API requests per hour
REQUESTS_PER_HOUR=1000

# Maximum API requests per minute
REQUESTS_PER_MINUTE=50

# Burst allowance (extra requests allowed in short bursts)
BURST_SIZE=10

# Retry configuration for failed requests
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# ------------------------------------------
# Caching
# ------------------------------------------
# Enable/disable caching
CACHE_ENABLED=true

# Cache time-to-live in seconds (default: 5 minutes)
CACHE_TTL=300

# Maximum number of items to cache
CACHE_MAX_SIZE=1000

# Cache eviction strategy: lru (Least Recently Used), lfu (Least Frequently Used), fifo (First In First Out)
CACHE_STRATEGY=lru

# ------------------------------------------
# Circuit Breaker
# ------------------------------------------
# Enable/disable circuit breaker protection
CIRCUIT_BREAKER_ENABLED=true

# Number of failures before circuit opens
CIRCUIT_BREAKER_THRESHOLD=5

# Time circuit stays open in milliseconds (default: 1 minute)
CIRCUIT_BREAKER_TIMEOUT=60000

# Time before attempting reset after half-open state (default: 30 seconds)
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# ------------------------------------------
# Feature Flags
# ------------------------------------------
# Enable API response caching
FEATURE_CACHING=true

# Enable Prometheus-compatible metrics collection
FEATURE_METRICS=true

# Enable health check endpoints
FEATURE_HEALTH_CHECK=true

# Enable request input validation
FEATURE_REQUEST_VALIDATION=true

# Enable response enrichment with metadata
FEATURE_RESPONSE_ENRICHMENT=true

# Enable circuit breaker protection
FEATURE_CIRCUIT_BREAKER=true

# Enable response compression
FEATURE_COMPRESSION=true

# Enable OpenAPI specification conversion
FEATURE_OPEN_API_CONVERTER=false

# Enable OpenTelemetry tracing
FEATURE_ENABLE_TELEMETRY=false

# Enable WebSocket real-time updates
FEATURE_WEBSOCKET=true

# ------------------------------------------
# Monitoring & Observability
# ------------------------------------------
# Enable monitoring features
MONITORING_ENABLED=true

# Interval for metrics collection in milliseconds (default: 1 minute)
METRICS_INTERVAL=60000

# Interval for health checks in milliseconds (default: 30 seconds)
HEALTH_CHECK_INTERVAL=30000

# ------------------------------------------
# Server Configuration
# ------------------------------------------
# Environment: development, staging, production, test
NODE_ENV=production

# Logging level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Server identification
SERVER_NAME=stateset-mcp-server
SERVER_VERSION=1.0.0

# WebSocket server port for real-time updates
WEBSOCKET_PORT=8081
