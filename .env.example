# StateSet MCP Server Configuration

# Required: StateSet API key
STATESET_API_KEY=your_api_key_here

# Optional: API configuration
STATESET_API_URL=https://api.stateset.com
API_TIMEOUT=30000

# Optional: Server configuration
SERVER_NAME=StateSet MCP Server
SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Optional: Rate limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_RETRY_ATTEMPTS=3
RATE_LIMIT_RETRY_DELAY=1000
RATE_LIMIT_BURST_SIZE=10

# Optional: Cache configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# Optional: Security configuration
ALLOWED_ORIGINS=http://localhost:3000
ENABLE_CORS=true
ENABLE_HELMET=true

# Optional: Feature flags
ENABLE_METRICS=true
ENABLE_TELEMETRY=false
FEATURE_METRICS=true
FEATURE_CACHING=true
FEATURE_HEALTH_CHECK=true
FEATURE_REQUEST_VALIDATION=true
FEATURE_RESPONSE_ENRICHMENT=true
FEATURE_CIRCUIT_BREAKER=true
FEATURE_COMPRESSION=true

# Optional: Monitoring
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000
METRICS_ENDPOINT=/metrics
METRICS_ENABLED=true
